<% include ./partials/header %>
<!-- ______^partial header^______navbar location____________________________-->


<div class="ui main container segment">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>"/>
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <!-- <%= blog.body %> -->
                <%- blog.body %> <!-- will run as code, not as text  -->
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">EDIT</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">DELETE</button>
            </form>
        </div>
    </div>
</div>



